	"item": [
		{
			"name": "GET Health",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. Status code harus 200\r",
							"pm.test('Response status code should be 200', () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// 2. Content-Type harus application/json\r",
							"pm.test('Response Content-Type header should be application/json', () => {\r",
							"    pm.expect(pm.response.headers.get('Content-Type')).to.eql('application/json; charset=utf-8');\r",
							"});\r",
							"\r",
							"// 3. Response body harus object\r",
							"pm.test('Response body should be an object', () => {\r",
							"    const responseJson = pm.response.json();\r",
							"    pm.expect(responseJson).to.be.an('object');\r",
							"});\r",
							"\r",
							"// 4. Response body harus punya properti status, uptime, version\r",
							"pm.test('Response body should have status, uptime, and version properties', () => {\r",
							"    const responseJson = pm.response.json();\r",
							"\r",
							"    pm.expect(responseJson).to.have.property('status');\r",
							"    pm.expect(responseJson.status).to.eql('ok');\r",
							"\r",
							"    pm.expect(responseJson).to.have.property('uptime');\r",
							"    pm.expect(responseJson.uptime).to.be.a('number');\r",
							"\r",
							"    pm.expect(responseJson).to.have.property('version');\r",
							"    pm.expect(responseJson.version).to.eql('1.0.0');\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "localhost:3000/health",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"health"
					]
				}
			},
			"response": []
		},
		{
			"name": "POST Employee",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. Status code harus 201\r",
							"pm.test('Response status code should be 201', () => {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"// 2. Content-Type harus application/json\r",
							"pm.test('Response Content-Type header should be application/json', () => {\r",
							"    pm.expect(pm.response.headers.get('Content-Type')).to.eql('application/json; charset=utf-8');\r",
							"});\r",
							"\r",
							"// 3. Response body harus object\r",
							"pm.test('Response body should be an object', () => {\r",
							"    const responseJson = pm.response.json();\r",
							"    pm.expect(responseJson).to.be.an('object');\r",
							"});\r",
							"\r",
							"// 4. Response body harus punya properti status dan data\r",
							"pm.test('Response body should have correct properties and values', () => {\r",
							"    const responseJson = pm.response.json();\r",
							"\r",
							"    pm.expect(responseJson).to.have.property('status');\r",
							"    pm.expect(responseJson.status).to.eql('success');\r",
							"\r",
							"    pm.expect(responseJson).to.have.property('data');\r",
							"    pm.expect(responseJson.data).to.be.an('object');\r",
							"});\r",
							"\r",
							"// 5. Response data harus punya id, tidak kosong\r",
							"pm.test('Response body data should have id property, and not empty', () => {\r",
							"    const responseJson = pm.response.json();\r",
							"    const { data } = responseJson;\r",
							"\r",
							"    pm.expect(data).to.have.property('id');\r",
							"    pm.expect(data.id).to.not.eql('');\r",
							"\r",
							"    // Simpan id karyawan ke environment variable\r",
							"    pm.environment.set('employeeId', data.id);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
